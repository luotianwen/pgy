<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>kkgame_adv_hz</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/conf/spring/applicationContext-*.xml</param-value>
	</context-param>
	<!-- for log4j -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>advhzWebName.root</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>3000</param-value>
	</context-param>	
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>	
	<servlet>
    	<servlet-name>InitGlobe</servlet-name>
    	<servlet-class>com.kkgame.hz.base.InitApplication</servlet-class>
    	<load-on-startup>1</load-on-startup>
    </servlet>	
	<!-- encoding -->
	<filter>		
 		<filter-name>encodingFilter</filter-name>		
 		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>		
 		<init-param>			
 			<param-name>encoding</param-name>			
 			<param-value>UTF-8</param-value>		
 		</init-param>		
 		<init-param>			
 			<param-name>forceEncoding</param-name>			
			<param-value>true</param-value>		
 		</init-param>	
 	</filter> 	
 	<filter-mapping>		
 		<filter-name>encodingFilter</filter-name>		
 		<url-pattern>/*</url-pattern>	
 	</filter-mapping>	
	<!-- struts2 -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
	</filter>	
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping> 
		<filter-name>struts2</filter-name> 
		<url-pattern>*.jsp</url-pattern> 
	</filter-mapping>
	<!-- spring -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		<servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
				<param-name>scriptCompressed</param-name>
				<param-value>false</param-value>
			</init-param>
			<load-on-startup>2</load-on-startup>
	</servlet>
  	<servlet>
    	<servlet-name>FileReaderServlet</servlet-name>
    	<servlet-class>com.kkgame.hz.servlet.FileReaderServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
    	<servlet-name>FileReaderServlet</servlet-name>
    	<url-pattern>/servlet/FileReaderServlet</url-pattern>
  	</servlet-mapping>
 	<jsp-config>	
		<taglib>
	    	<taglib-uri>/WEB-INF/tld/pkig-calendar.tld</taglib-uri>
	    	<taglib-location>/WEB-INF/tld/pkig-calendar.tld</taglib-location>
		</taglib>
	  	<taglib>
		    <taglib-uri>/WEB-INF/tld/pkig-page.tld</taglib-uri>
		    <taglib-location>/WEB-INF/tld/pkig-page.tld</taglib-location>
  		</taglib>
  		<taglib>
    		<taglib-uri>/WEB-INF/tld/pkig-role.tld</taglib-uri>
    		<taglib-location>/WEB-INF/tld/pkig-role.tld</taglib-location>
		</taglib>
		<taglib>
    		<taglib-uri>/WEB-INF/tld/pkig-page-ajax.tld</taglib-uri>
    		<taglib-location>/WEB-INF/tld/pkig-page-ajax.tld</taglib-location>
		</taglib>
	</jsp-config>
 	<session-config>
 		<session-timeout>80</session-timeout>
 	</session-config>
 	<welcome-file-list>
	  <welcome-file>index.jsp</welcome-file> 
	</welcome-file-list>
	<!-- first page 
	<welcome-file-list>
		<welcome-file>./pages/main/frame.jsp</welcome-file>
	</welcome-file-list>-->
</web-app>
